<div class="col-lg-4 mt-4">
  <figure class="figure">
    <%= image_tag image.picture.medium.url , class: 'figure-img img-fluid rounded' ,style: 'border-solid: 1px;' %>
    <figcaption class="figure-caption">
      <div class="col-lg-12">
        <p><b><%=t('activerecord.attributes.image.title')%>: </b><%= image.title %></p>
        <p><b><%=t('activerecord.attributes.image.description')%>: </b></p>
        <p><%= image.description %></p>
      </div>
    </figcaption>
    <figcaption class="figure-caption d-flex justify-content-center">
      <div class="col-lg-6">
        <%= link_to content_tag('i', nil, class: 'icon-search icon-white')+' Like ', edit_image_path(image) , class: 'btn btn-primary btn-block' %>

      </div>
      <div class="col-lg-6">
      </div>
    </figcaption>
  </figure>
</div>

